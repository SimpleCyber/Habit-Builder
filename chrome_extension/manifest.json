{
  "manifest_version": 3,
  "name": "HabitX Site Locker",
  "version": "1.0",
  "permissions": ["storage", "tabs", "scripting", "webNavigation"],
  "host_permissions": ["<all_urls>"],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://habit-builder-rho.vercel.app/*"],
      "js": ["content-script.js"]
    }
  ],

  "web_accessible_resources": [
  {
    "resources": ["blocker.html", "styles.css"],
    "matches": ["<all_urls>"],
    "extension_pages": true
  }
]

}
